{
    "app-id": "org.solarus_games.Solarus",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.11",
    "sdk": "org.kde.Sdk",
    "command": "solarus-launcher",
    "finish-args": [
        "--socket=x11",
        "--share=ipc",
        "--device=dri",
        "--socket=pulseaudio",
        "--filesystem=home"
    ],
    "modules": [
        {
            "name": "libmodplug",
            "buildsystem": "simple",
            "build-commands": [
                "./configure --prefix /app",
                "make",
                "make install"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.com/solarus-games/libmodplug.git",
                    "branch": "master"
                }
            ]
        },
        {
            "name": "libphysfs",
            "buildsystem": "cmake",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://icculus.org/physfs/downloads/physfs-3.0.1.tar.bz2",
                    "sha256": "b77b9f853168d9636a44f75fca372b363106f52d789d18a2f776397bf117f2f1"
                }
            ]
        },
        {
            "name": "libluajit",
            "buildsystem": "simple",
            "build-commands": [
                "make PREFIX=/app",
                "make install PREFIX=/app"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "http://luajit.org/download/LuaJIT-2.0.4.tar.gz",
                    "sha256": "620fa4eb12375021bef6e4f237cbd2dd5d49e56beb414bee052c746beef1807d"
                }
            ]
        },
        {
            "name": "solarus",
            "buildsystem": "cmake",
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.com/solarus-games/solarus.git",
                    "tag": "v1.6.0"
                }
            ]
        }
    ]
}
